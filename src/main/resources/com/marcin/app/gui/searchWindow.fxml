<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<BorderPane fx:id="myBorderPane" fx:controller="com.marcin.app.gui.SearchWindow"
            stylesheets="@/css/styles.css"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <AnchorPane fx:id="leftSide"
                    prefHeight="200.0" prefWidth="200.0"
                    BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imageView"
                           fitHeight="150.0" fitWidth="200.0" layoutX="14.0" layoutY="152.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../images/main_icon.png"/>
                    </image>
                </ImageView>
                <Text fx:id="text1"
                      layoutX="23.0" layoutY="93.0"
                      strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Rockwell" size="28.0"/>
                    </font>
                </Text>
            </children>

        </AnchorPane>
    </left>
    <right>
        <AnchorPane fx:id="rightSide"
                    prefHeight="400.0" prefWidth="300.0"
                    BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label1"
                      layoutX="69.0" layoutY="104.0"
                      textAlignment="CENTER">
                    <font>
                        <Font name="SansSerif Regular" size="22.0"/>
                    </font>
                </Label>
                <TextField fx:id="textfiled1" onAction="#enterPressedAction"
                           alignment="CENTER"
                           layoutX="30.0" layoutY="119.0"
                           prefHeight="50.0" prefWidth="240.0">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </TextField>
                <ListView fx:id="listView"
                          layoutX="40.0" layoutY="186.0" prefHeight="200.0" prefWidth="220.0"
                          style="-fx-background-color: transparent;"/>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
